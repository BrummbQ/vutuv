<%= form_for @changeset, @action, [class: "search-form", value: @conn.assigns[:value]], fn f -> %>
  <%= if @changeset.action do %>
    <div class="message message--failure">
      <p><%= gettext "Oops, something went wrong! Please check the errors below." %></p>
    </div>
  <% end %>
  <%= text_input f, :value, placeholder: "Search here", autofocus: true %>
  <%= error_tag f, :value %>

  <%= submit gettext("Submit")%>
<% end %>



<h2>Followers</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Inserted At</th>
      <th>Follower</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for connection <- @user.follower_connections do %>
    <tr>
      <td>
        <%= if gravatar_url(connection.follower) do %>
          <img src="<%= gravatar_url(connection.follower) %>"  class="img-responsive img-rounded" height = 25 width = 25 alt="Avatar <%= full_name(connection.follower) %>" />
        <% end %>
      </td>
      <td>
        <%= time_ago_in_words connection.inserted_at %> ago
      </td>
      <td><%= full_name(connection.follower) %></td>

      <td class="text-right">
        <%= link "Show", to: connection_path(@conn, :show, connection), class: "btn btn-default btn-xs" %>      </td>
    </tr>
<% end %>
  </tbody>
</table>
